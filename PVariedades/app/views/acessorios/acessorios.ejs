            list-style: none;
            display: inline-block;
        }

        .product-grid .product-links {
            background-color: #f6f6f6;
            text-align: center;
            width: 100%;
            height: 100%;
            padding: 17px 0;
            margin: 0;
            list-style: none;
            position: absolute;
            top: 100%;
            left: 0;
            z-index: 1;
            transition: all 0.35s;
        }

        .product-grid:hover .product-links {
            top: 0;
        }

        .product-grid .product-links li {
            display: inline-block;
            margin: 0 5px;
        }

