        .product-grid .title a {
            color: #2A3843;
            transition: all 0.3s ease 0s;
        }

        .product-grid .title a:hover {
            color: #e74c3c;
        }

        .product-grid .price {
            color: #2A3843;
            font-size: 17px;
            font-weight: 600;
            width: calc(100% - 91px);
            display: inline-block;
        }

        .product-grid .price span {
